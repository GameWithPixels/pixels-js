{
  "name": "@systemic-games/react-native-pixels-components",
  "version": "1.0.0",
  "description": "UI components with Pixels theming and specific features, using Expo + Native Base.",
  "main": "dist/commonjs/index",
  "module": "dist/module/index",
  "types": "dist/typescript/index.d.ts",
  "react-native": "src/index",
  "source": "src/index",
  "files": [
    "src",
    "dist",
    "android",
    "ios",
    "cpp",
    "react-native-pixels-components.podspec",
    "!android/build",
    "!ios/build",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__"
  ],
  "scripts": {
    "test": "jest",
    "prepare": "bob build",
    "publish": "release-it"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:GameWithPixels/pixels-js.git"
  },
  "author": "Systemic Games (https://gamewithpixels.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/GameWithPixels/pixels-js/issues"
  },
  "homepage": "https://github.com/GameWithPixels/pixels-js/tree/main/packages/react-native-pixels-components",
  "dependencies": {
    "@systemic-games/react-native-base-components": "~1.0.0",
    "@systemic-games/pixels-core-utils": "~1.2.2",
    "@systemic-games/pixels-edit-animation": "~1.2.2"
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "^8.0.1",
    "@types/jest": "^29.1.2",
    "@types/react": "~18.2.29",
    "jest": "^29.1.2",
    "react": "18.2.0",
    "react-native": "0.73.6",
    "react-native-builder-bob": "^0.23.2",
    "react-native-paper": "^5.12.3",
    "react-native-safe-area-context": "4.8.2",
    "react-native-svg": "14.1.0",
    "release-it": "^17.2.0"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-native": ">=0.71.0",
    "react-native-paper": "^5.0.0"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/dist/"
    ]
  },
  "release-it": {
    "git": {
      "tag": false,
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": false
    },
    "plugins-disabled": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "dist",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  }
}
