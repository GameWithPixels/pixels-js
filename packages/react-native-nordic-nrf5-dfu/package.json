{
  "name": "@systemic-games/react-native-nordic-nrf5-dfu",
  "version": "1.0.1",
  "description": "React Native package for running DFUs on Nordic Semiconductor nRF5 devices.",
  "main": "dist/commonjs/index",
  "module": "dist/module/index",
  "types": "dist/typescript/index.d.ts",
  "react-native": "src/index",
  "source": "src/index",
  "files": [
    "src",
    "dist",
    "android",
    "ios",
    "cpp",
    "react-native-nordic-nrf5-dfu.podspec",
    "!android/build",
    "!ios/build",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__"
  ],
  "scripts": {
    "test": "jest",
    "prepare": "bob build",
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "publish": "release-it"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "keywords": [
    "react-native",
    "android",
    "bluetooth",
    "Bluetooth Low Energy",
    "BluetoothLE",
    "BLE",
    "Nordic",
    "nRF5",
    "Device Firmware Update",
    "DFU"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:GameWithPixels/pixels-js.git"
  },
  "author": "Systemic Games (https://gamewithpixels.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/GameWithPixels/pixels-js/issues"
  },
  "homepage": "https://github.com/GameWithPixels/pixels-js#readme",
  "devDependencies": {
    "@release-it/conventional-changelog": "^5.0.0",
    "@types/jest": "^29.1.2",
    "@types/react": "~18.0.25",
    "@types/react-native": "0.70.6",
    "jest": "^29.1.2",
    "react": "18.1.0",
    "react-native": "0.70.6",
    "react-native-builder-bob": "^0.20.3",
    "release-it": "^15.6.0"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/dist/"
    ]
  },
  "release-it": {
    "git": {
      "tag": false,
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": false
    },
    "plugins-disabled": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "dist",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  },
  "typedoc": {
    "entryPoint": "./src/index.ts"
  }
}
