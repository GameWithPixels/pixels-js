    "strict": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "noEmit": false,
    "emitDeclarationOnly": true,
    "paths": {
      "@systemic-games/*": [
        "./packages/*/src"
      ]
    }
  },
  "exclude": [
    "**/*.test.ts?"
  ]
}
